<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakActivity">

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/biorhyme"
        android:text="start"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_start_pause"
        android:layout_alignBottom="@+id/button_start_pause"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:background="@drawable/stretching_btn"
        android:fontFamily="@font/biorhyme"
        android:minHeight="48dp"
        android:text="reset"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        tools:ignore="TouchTargetSizeCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="57dp"
        android:fontFamily="@font/biorhyme"
        android:text="@string/BreakText"
        android:textColor="@color/black"
        android:textSize="48sp" />

    <Button
        android:id="@+id/skipButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_start_pause"
        android:layout_alignBottom="@+id/button_start_pause"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/button_start_pause"
        android:background="@drawable/cancel_btn_bg"
        android:fontFamily="@font/biorhyme"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>